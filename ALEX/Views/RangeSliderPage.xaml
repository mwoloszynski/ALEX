<Page x:Class="ALEX.Views.RangeSliderPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ALEX.ViewModels" 
		xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="0,20,0,0" >
        <Label Content="Vertical Orientation"></Label>
        <syncfusion:SfRangeSlider 
            CustomLabels="{Binding CustomCollection}"
                ShowCustomLabels="True"
            ThumbToolTipPlacement="BottomRight"
            RangeEnd="70" RangeStart="40" ShowRange="True"
              Width="500" Height="300" TickPlacement="BottomRight" TickFrequency="20"
              HorizontalAlignment="Center" ShowValueLabels="True" Orientation="Vertical"
              VerticalAlignment="Center"
              Maximum="100"
              Minimum="0"
              Value="50" />
    </StackPanel>
</Page>
